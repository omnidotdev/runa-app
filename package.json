{
  "name": "@omnidotdev/runa-app",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --names \"GRAPHQL-CODEGEN,CLIENT\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run graphql:generate:watch\" \"vite dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node .output/server/index.mjs",
    "check": "biome check --diagnostic-level=error src",
    "format": "biome format --write src",
    "lint": "biome lint --diagnostic-level=error src",
    "graphql:generate": "NODE_PATH=src/ dotenv -e .env.development -- graphql-codegen --config src/lib/graphql/codegen.config.ts",
    "graphql:generate:watch": "bun graphql:generate -w",
    "prepare": "husky",
    "knip": "knip-bun --cache --tags=-knipignore"
  },
  "dependencies": {
    "@ark-ui/react": "^5.15.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/db-collections": "^0.0.13",
    "@tanstack/react-db": "^0.0.11",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-router": "^1.121.33",
    "@tanstack/react-router-with-query": "^1.121.33",
    "@tanstack/react-start": "^1.121.33",
    "@tiptap/core": "^2.22.3",
    "@tiptap/extension-link": "^2.22.3",
    "@tiptap/extension-placeholder": "^2.22.3",
    "@tiptap/extension-task-item": "^2.22.3",
    "@tiptap/extension-task-list": "^2.22.3",
    "@tiptap/react": "^2.22.3",
    "@tiptap/starter-kit": "^2.22.3",
    "@tiptap/suggestion": "^2.22.3",
    "chrono-node": "^2.8.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "graphql": "^16.11.0",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "ts-pattern": "^5.7.1",
    "usehooks-ts": "^3.1.1",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/import-types-preset": "^3.0.1",
    "@graphql-codegen/plugin-helpers": "^5.1.1",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-msw": "^3.0.1",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "@tanstack/react-query-devtools": "^5.81.2",
    "@tanstack/react-router-devtools": "^1.121.33",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.2.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "husky": "^9.1.7",
    "knip": "^5.61.2",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}

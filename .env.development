VITE_BASE_URL="https://localhost:3000"
VITE_API_BASE_URL="https://127.0.0.1:4000"
VITE_AUTH_BASE_URL="https://localhost:8000"
VITE_BILLING_BASE_URL="https://localhost:6001"

# Server-side env vars (no VITE_ prefix - accessed via process.env in server functions)
API_BASE_URL="https://127.0.0.1:4000"
AUTH_BASE_URL="https://localhost:8000"
BILLING_BASE_URL="https://localhost:6001"
# OAuth client credentials, must match an allowed OAuth application in the IDP
AUTH_CLIENT_ID="mock-runa-app-client-id"
AUTH_CLIENT_SECRET="mock-runa-app-client-secret"

# emails
VITE_FROM_EMAIL_ADDRESS="onboarding@resend.dev"
VITE_TO_EMAIL_ADDRESS="delivered@resend.dev"

# ⚠️ never use in production; disable certificate validation (useful for development environments to avoid having to manually trust a self-signed certificate)
# reference: https://nodejs.org/api/cli.html#node_tls_reject_unauthorizedvalue
NODE_TLS_REJECT_UNAUTHORIZED="0"
